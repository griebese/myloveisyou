<body>
    <button class="button" id="randomBtn">ЖМЯК ну просто ЖМЯК</button>
    
    <div class="meme-container" id="memeContainer" style="display: none;">
        <img src="https://www.edigitalagency.com.au/wp-content/uploads/TikTok-icon-glyph.png" class="tiktok-icon" alt="TikTok">
        <div class="meme-text" id="memeText"></div>
        <div class="meme-author">— популярный TikTok-мем</div>
    </div>

    <audio id="clickSound" src="https://assets.mixkit.co/sfx/preview/mixkit-arcade-game-jump-coin-216.mp3" preload="auto"></audio>

    <script>
        const memes = [
            "Тралалеро тралала",
            "Бомбардино крокодило",
            "Шоколадно-бубновая ночь",
            "Чики-брики и в дамки",
            "Опа-опа, карамелька"
        ];

        const randomBtn = document.getElementById('randomBtn');
        const memeContainer = document.getElementById('memeContainer');
        const memeText = document.getElementById('memeText');
        const clickSound = document.getElementById('clickSound');

        randomBtn.addEventListener('click', function() {
            clickSound.currentTime = 0;
            clickSound.play();
            
            // Показываем контейнер с мемом
            memeContainer.style.display = 'block';
            
            // Выбираем случайный мем
            const randomIndex = Math.floor(Math.random() * memes.length);
            memeText.textContent = memes[randomIndex];
            
            // Анимация появления
            memeContainer.style.animation = 'none';
            void memeContainer.offsetWidth; // Триггер рефлоу
            memeContainer.style.animation = 'fadeIn 0.5s';
        });
    </script>

    <style>
        @keyframes fadeIn {
            from { opacity: 0; transform: translateY(20px); }
            to { opacity: 1; transform: translateY(0); }
        }
        .meme-container {
            animation: fadeIn 0.5s;
        }
    </style>
</body>
