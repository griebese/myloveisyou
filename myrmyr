        }
        .button {
            width: 250px;
            padding: 15px 25px;
            font-size: 18px;
            color: white;
            text-align: center;
            border: none;
            border-radius: 50px;
            cursor: pointer;
            background: linear-gradient(135deg, #BA55D3, #9400D3);
            box-shadow: 0 8px 0 #6A0DAD, 0 15px 20px rgba(0, 0, 0, 0.3);
            transition: transform 0.1s, box-shadow 0.1s;
            position: relative;
            top: 0;
            font-weight: bold;
            margin-bottom: 30px;
        }
        .button:hover {
            background: linear-gradient(135deg, #C767E0, #9E1AD9);
        }
        .button:active {
            top: 5px;
            box-shadow: 0 3px 0 #6A0DAD, 0 5px 10px rgba(0, 0, 0, 0.2);
            transform: scale(0.98);
        }
        .meme-container {
            background: white;
